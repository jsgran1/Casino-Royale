<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clickable="false"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/button_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/slot_title"
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:src="@drawable/slot_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/slot_frame"
        android:layout_width="425dp"
        android:layout_height="425dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/slot_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r1_img1"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="@id/slot_frame"
        app:layout_constraintTop_toTopOf="@id/slot_frame" />

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r1_img2"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="@id/slot_frame"
        app:layout_constraintTop_toBottomOf="@id/r1_img1" />

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r1_img3"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="@id/slot_frame"
        app:layout_constraintTop_toBottomOf="@id/r1_img2" />

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r2_img1"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="@id/slot_frame"
        android:visibility="invisible"/>

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r2_img2"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/r2_img1"
        android:visibility="invisible"/>

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r2_img3"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/r2_img2"
        android:visibility="invisible"/>

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r3_img1"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="@id/slot_frame"
        android:visibility="invisible"/>

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r3_img2"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/r3_img1"
        android:visibility="invisible"/>

    <com.example.casinoroyale.ImageViewScrolling
        android:id="@+id/r3_img3"
        android:layout_width="@dimen/slotSize"
        android:layout_height="@dimen/slotSize"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/r3_img2"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/lights_off"
        android:layout_width="425dp"
        android:layout_height="425dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/lights_off"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lights_red"
        android:layout_width="440dp"
        android:layout_height="425dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/lights_red"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/lights_off"
        app:layout_constraintEnd_toEndOf="@id/lights_off"
        app:layout_constraintStart_toStartOf="@id/lights_off"
        app:layout_constraintTop_toTopOf="@id/lights_off"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lights_odds"
        android:layout_width="440dp"
        android:layout_height="425dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/lights_odds"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/lights_off"
        app:layout_constraintEnd_toEndOf="@id/lights_off"
        app:layout_constraintStart_toStartOf="@id/lights_off"
        app:layout_constraintTop_toTopOf="@id/lights_off"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lights_evens"
        android:layout_width="440dp"
        android:layout_height="425dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/lights_evens"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/lights_off"
        app:layout_constraintEnd_toEndOf="@id/lights_off"
        app:layout_constraintStart_toStartOf="@id/lights_off"
        app:layout_constraintTop_toTopOf="@id/lights_off"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lights_1"
        android:layout_width="440dp"
        android:layout_height="425dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/lights_1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/lights_off"
        app:layout_constraintEnd_toEndOf="@id/lights_off"
        app:layout_constraintStart_toStartOf="@id/lights_off"
        app:layout_constraintTop_toTopOf="@id/lights_off"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lights_2"
        android:layout_width="440dp"
        android:layout_height="425dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/lights_2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/lights_off"
        app:layout_constraintEnd_toEndOf="@id/lights_off"
        app:layout_constraintStart_toStartOf="@id/lights_off"
        app:layout_constraintTop_toTopOf="@id/lights_off"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/lights_3"
        android:layout_width="440dp"
        android:layout_height="425dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/lights_3"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/lights_off"
        app:layout_constraintEnd_toEndOf="@id/lights_off"
        app:layout_constraintStart_toStartOf="@id/lights_off"
        app:layout_constraintTop_toTopOf="@id/lights_off"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/jackpot_frame_0"
        android:layout_width="239dp"
        android:layout_height="138dp"
        android:src="@drawable/jackpot_frame_0"
        app:layout_constraintBottom_toBottomOf="@id/slot_frame"
        app:layout_constraintEnd_toStartOf="@id/slot_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/jackpot_pot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jackpot_starting"
        android:textColor="@color/gold"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/jackpot_frame_0"
        app:layout_constraintEnd_toEndOf="@id/jackpot_frame_0"
        app:layout_constraintStart_toStartOf="@id/jackpot_frame_0"
        app:layout_constraintTop_toTopOf="@id/jackpot_frame_0" />

    <ImageView
        android:id="@+id/jackpot_title"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/jackpot_title"
        app:layout_constraintBottom_toTopOf="@id/jackpot_frame_0"
        app:layout_constraintEnd_toStartOf="@id/slot_frame"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/handle_up"
        android:layout_width="206dp"
        android:layout_height="305dp"
        android:src="@drawable/handle_up"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/slot_frame"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pay_table_up"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/pay_table_up"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/pay_table_down"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/pay_table_down"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/line_bet_up"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="10dp"
        android:onClick="cycleLineBet"
        android:src="@drawable/line_bet_up"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pay_table_up"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/line_bet_down"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="10dp"
        android:src="@drawable/line_bet_down"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pay_table_up"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/line_select_up"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="10dp"
        android:onClick="cycleLineNumb"
        android:src="@drawable/line_select_up"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line_bet_up"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/line_select_down"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="10dp"
        android:src="@drawable/line_select_down"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line_bet_up"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/bet_label"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bet_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line_select_up"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/win_label"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="10dp"
        android:src="@drawable/win_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bet_label"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/cash_out_up"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="30dp"
        android:src="@drawable/cash_out_up"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/win_label"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/cash_out_down"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/btn_gaps"
        android:layout_marginLeft="@dimen/btn_gaps"
        android:layout_marginBottom="30dp"
        android:src="@drawable/cash_out_down"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/win_label"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/line_bet_txt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/credit_text"
        app:layout_constraintBottom_toTopOf="@id/line_bet_up"
        app:layout_constraintEnd_toEndOf="@id/line_bet_up"
        app:layout_constraintStart_toStartOf="@id/line_bet_up"
        app:layout_constraintTop_toBottomOf="@id/slot_frame"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_bet"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/line_bet_txt"
        app:layout_constraintEnd_toEndOf="@id/line_bet_txt"
        app:layout_constraintStart_toStartOf="@id/line_bet_txt"
        app:layout_constraintTop_toTopOf="@id/line_bet_txt" />

    <ImageView
        android:id="@+id/times"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/times"
        app:layout_constraintBottom_toTopOf="@id/line_bet_up"
        app:layout_constraintEnd_toStartOf="@id/line_select_txt"
        app:layout_constraintStart_toEndOf="@id/line_bet_txt"
        app:layout_constraintTop_toBottomOf="@id/slot_frame"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/line_select_txt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/credit_text"
        app:layout_constraintBottom_toTopOf="@id/line_select_up"
        app:layout_constraintEnd_toEndOf="@id/line_select_up"
        app:layout_constraintStart_toStartOf="@id/line_select_up"
        app:layout_constraintTop_toBottomOf="@id/slot_frame"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_line_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_bet"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/line_select_txt"
        app:layout_constraintEnd_toEndOf="@id/line_select_txt"
        app:layout_constraintStart_toStartOf="@id/line_select_txt"
        app:layout_constraintTop_toTopOf="@id/line_select_txt" />

    <ImageView
        android:id="@+id/equals"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/equals"
        app:layout_constraintBottom_toTopOf="@id/line_bet_up"
        app:layout_constraintEnd_toStartOf="@id/bet_text"
        app:layout_constraintStart_toEndOf="@id/line_select_txt"
        app:layout_constraintTop_toBottomOf="@id/slot_frame"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/bet_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/bet_text"
        app:layout_constraintBottom_toTopOf="@id/bet_label"
        app:layout_constraintEnd_toEndOf="@id/bet_label"
        app:layout_constraintStart_toStartOf="@id/bet_label"
        app:layout_constraintTop_toBottomOf="@id/slot_frame"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_bet_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_bet"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/bet_text"
        app:layout_constraintEnd_toEndOf="@id/bet_text"
        app:layout_constraintStart_toStartOf="@id/bet_text"
        app:layout_constraintTop_toTopOf="@id/bet_text" />

    <ImageView
        android:id="@+id/win_txt"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/credit_text"
        app:layout_constraintBottom_toTopOf="@id/win_label"
        app:layout_constraintEnd_toEndOf="@id/win_label"
        app:layout_constraintStart_toStartOf="@id/win_label"
        app:layout_constraintTop_toBottomOf="@id/slot_frame"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_win_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/win_txt"
        app:layout_constraintEnd_toEndOf="@id/win_txt"
        app:layout_constraintStart_toStartOf="@id/win_txt"
        app:layout_constraintTop_toTopOf="@id/win_txt" />

    <ImageView
        android:id="@+id/credit_label"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/credit_label"
        app:layout_constraintBottom_toTopOf="@id/cash_out_up"
        app:layout_constraintStart_toStartOf="@id/cash_out_up"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/credit_text"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/credit_text"
        app:layout_constraintBottom_toTopOf="@id/credit_label"
        app:layout_constraintEnd_toEndOf="@id/credit_label"
        app:layout_constraintStart_toStartOf="@id/credit_label"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_credit_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/credit_text"
        app:layout_constraintEnd_toEndOf="@id/credit_text"
        app:layout_constraintStart_toStartOf="@id/credit_text"
        app:layout_constraintTop_toTopOf="@id/credit_text" />

    <ImageView
        android:id="@+id/handle_down"
        android:layout_width="206dp"
        android:layout_height="305dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/handle_down"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/slot_frame"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="540dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="415dp" />


</androidx.constraintlayout.widget.ConstraintLayout>